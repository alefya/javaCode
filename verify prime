public class Solution {
	public int isPrime(int a) {
	    boolean flag= true;
        int i,j,n;

        if( a <= 1)
        return 0;	

        for (i=2;i<= (int)Math.sqrt(a);i++)
		{
    		if(a%i==0)
    		{
    		flag = false;
    		}
	    }
                if(flag)
                return 1;
                else
                return 0;	
	    
	    
	    
	    
	    
	}
}
